@model IEnumerable<w.Models.STATE>


@{
	ViewBag.Title = "ListState";
}
<style>
	.container-fluid {
		color:chartreuse;
		margin-left: 250px;
	}
</style>
<div class="container-fluid">
	<h2>ListState</h2>

	<p>
		@Html.ActionLink("Create New", "Addstate")
	</p>
	<table class="table">
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.SNAME)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.COUNTRY.CNAME)
			</th>
			<th></th>
		</tr>

		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.SNAME)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.COUNTRY.CNAME)
				</td>
				<td>
					@Html.ActionLink("Edit", "Edit", new { id = item.SID }) |
					@Html.ActionLink("Details", "Details", new { id = item.SID }) |
					@Html.ActionLink("Delete", "Delete", new { id = item.SID })
				</td>
			</tr>
		}

	</table>
</div>